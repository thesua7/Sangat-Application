<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popup"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:layout_gravity="center"
    android:background="@color/MaterialBlack"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/exitbtn"
        android:layout_width="44dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:layout_marginStart="297dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="417dp"
        android:background="@drawable/crossbtn"
        android:gravity="center"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/fullname"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="66dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="338dp"
        android:autofillHints=""
        android:background="@drawable/popupfield1"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/full_name"
        android:inputType="textPersonName"

        android:textColorHint="@color/MaterialBlack"
        tools:targetApi="o" />


    <EditText
        android:id="@+id/emailid"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="66dp"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="281dp"
        android:autofillHints=""
        android:background="@drawable/popupfield1"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/email"
        android:inputType="textEmailAddress"

        android:textColorHint="@color/MaterialBlack"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="66dp"
        android:layout_marginTop="211dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="224dp"
        android:autofillHints=""
        android:background="@drawable/popupfield1"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/contact_number"
        android:inputType="none|phone"

        android:textColorHint="@color/MaterialBlack"
        tools:targetApi="o" />

    <Button
        android:id="@+id/addbtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="123dp"
        android:layout_marginTop="305dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="125dp"
        android:gravity="center"
        android:background="@drawable/adduserbtn"
        android:text="@string/add" />

    <TextView
        android:id="@+id/test"
        android:layout_width="68dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="137dp"
        android:layout_marginTop="362dp"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="83dp" />


</RelativeLayout>